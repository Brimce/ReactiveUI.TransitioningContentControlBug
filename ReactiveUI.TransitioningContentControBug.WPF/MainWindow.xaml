<rxui:ReactiveWindow
    x:Class="ReactiveUI.TransitioningContentControBug.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rxui="http://reactiveui.net"
    xmlns:wpfTest="clr-namespace:ReactiveUI.TransitioningContentControBug.WPF"
    Title="ReactiveUI.Routing"
    Width="620"
    Height="360"
    x:TypeArguments="wpfTest:MainViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <rxui:RoutedViewHost
            x:Name="RoutedViewHost"
            Grid.Row="0"
            Margin="0,40,0,40"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Transition="SlideLeft"
            TransitionPart="OutIn" />


        <StackPanel
            Grid.Row="1"
            Margin="15"
            Orientation="Horizontal">
            <Button x:Name="GoNextButton" Content="Go to next" />
            <Button
                x:Name="GoBackButton"
                Margin="5,0,0,0"
                Content="Go back" />
        </StackPanel>
    </Grid>
</rxui:ReactiveWindow>